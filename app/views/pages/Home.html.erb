<div class="jumbotron">
  <h1 class="display-4">Welcome to Netflix Clone</h1>
  <p class="lead">Explore our collection of movies and TV shows.</p>
  <%= link_to "Browse Movies", movies_path, class: "btn btn-primary btn-lg" %>
</div>

<div class="row mt-4">
  <% Movie.order(created_at: :desc).limit(4).each do |movie| %>
    <div class="col-md-3">
      <div class="card">
        <%= image_tag movie.image_url, class: "card-img-top" if movie.image_url %>
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= truncate(movie.description, length: 100) %></p>
          <%= link_to "View Details", movie_path(movie), class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>

  <h1><%= @home %></h1>
</div>