<h1>Movies</h1>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-md-3 mb-4">
      <div class="card">
        <%= image_tag movie.image_url, class: "card-img-top" if movie.image_url %>
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= truncate(movie.description, length: 100) %></p>
          <%= link_to "View Details", movie_path(movie), class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h1>Movies</h1>

<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.search_field :title_cont, class: "form-control" %>
  </div>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<div class="row mt-4">
  <% @movies.each do |movie| %>
    <div class="col-md-3 mb-4">
      <div class="card">
        <%= image_tag movie.image_url, class: "card-img-top" if movie.image_url %>
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= truncate(movie.description, length: 100) %></p>
          <%= link_to "View Details", movie_path(movie), class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @movies %>